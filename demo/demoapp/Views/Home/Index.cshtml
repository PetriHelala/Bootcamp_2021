@{
    ViewData["Title"] = "Welcome to XAMPLE";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<div id="landingpageheading" class="text-center">
    <h3>We have many offerings in our store. We will find something for you.</h3>
</div>

<div class="carousel">
    <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselIndicators" data-slide-to="1"></li>
            <li data-target="#carouselIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-75" src="img\stock_p1.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-75" src="img\stock_p2.png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-75" src="img\stock_p3.png" alt="Third slide">
            </div>
        </div>
    </div>
</div>

<div class="text-center">
    <p>If you have questions concerning returns, please consult the 'Delivery' page before contacting us.</p> 
    <p>In case you want to contact us, please go to our 'Contact' page.</p>
    <img src="~/img/stock_p5.jpg" />
</div>
    


